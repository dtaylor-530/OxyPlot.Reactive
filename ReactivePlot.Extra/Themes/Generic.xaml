<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ReactivePlot.Ex">

    <Style TargetType="{x:Type local:SummaryControl}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SummaryControl}">
                    <UniformGrid Height="50">
                        <TextBlock>Key</TextBlock>
                        <TextBlock Text="{Binding Key, RelativeSource={RelativeSource TemplatedParent}}"></TextBlock>
                        <TextBlock>Value</TextBlock>
                        <TextBlock Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}}"></TextBlock>
                    </UniformGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>