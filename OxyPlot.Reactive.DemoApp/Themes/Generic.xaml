<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OxyPlot.Reactive.DemoApp.Common" xmlns:c="clr-namespace:NMT.Wpf.Controls;assembly=WindowsProgressRing">



    <Style TargetType="{x:Type local:ProgressRingHost}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ProgressRingHost}">
           
                        <Grid>
                            <ContentPresenter x:Name="PART_ContentPresenter" Visibility="Collapsed">
                            </ContentPresenter>
                            <c:WindowsProgressRing 
                                x:Name="PART_WindowsProgressRing"
                                
                            Foreground="Gray"
                            Width = "200"
                            Height = "200"
                            Speed = "0:0:2"
                            Items = "5" >
                            </c:WindowsProgressRing>
                        </Grid>
          
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>