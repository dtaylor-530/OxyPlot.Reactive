<UserControl
    x:Class="OxyPlot.Reactive.DemoApp.Views.MultiDateTimePlotView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:ReactivePlot.Model.Enum;assembly=ReactivePlot.Model"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:OxyPlot.Reactive.DemoApp"

    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:views="clr-namespace:OxyPlot.Reactive.DemoApp.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:Converter x:Key="Converter" />
            <local:DefaultConverter x:Key="DefaultConverter" />


            <ObjectDataProvider
                x:Key="dataFromEnum"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="enum:Operation" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <ObjectDataProvider
                x:Key="RollingOperation"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="enum:RollingOperation" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" FontWeight="DemiBold">
            <ToolBar>
                <TextBlock Margin="10">Operation</TextBlock>
                <hc:ComboBox
                    x:Name="ComboBox1"
                    Margin="10"
                    ItemsSource="{Binding Source={StaticResource dataFromEnum}}"
                    SelectedIndex="0" />

                <TextBlock Margin="10">Rolling Operation</TextBlock>
                <hc:ComboBox
                    x:Name="ComboBox2"
                    Margin="10"
                    ItemsSource="{Binding Source={StaticResource RollingOperation}}"
                    SelectedIndex="0" />

                <TextBlock Margin="10">Time</TextBlock>
                <views:TimePickerView x:Name="TimeView1" Height="25" />

                <TextBlock Margin="10">Power</TextBlock>
                <ComboBox
                    x:Name="PowerComboBox"
                    Width="40"
                    Height="25"
                    Margin="10"
                    FontSize="16"
                    SelectedIndex="0">
                    <sys:Int32>2</sys:Int32>
                    <sys:Int32>3</sys:Int32>
                    <sys:Int32>4</sys:Int32>
                    <sys:Int32>5</sys:Int32>
                </ComboBox>
            </ToolBar>
        </ToolBar>

        <TabControl>

            <TabItem Header="Rolling Operation">
                <DockPanel>
                    <ScrollViewer>
                        <ItemsControl x:Name="ItemsControlRollingOperation">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type views:ModelKeyIndex}">
                                    <Grid Width="600" Height="400">
                                        <hc:Card
                                            Margin="8"
                                            BorderThickness="0"
                                            Footer="{Binding index}">

                                            <Border CornerRadius="4,4,0,0">
                                                <oxy:PlotView Model="{Binding model}" />
                                            </Border>
                                            <hc:Card.FooterTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="10">
                                                        <TextBlock
                                                            HorizontalAlignment="Left"
                                                            FontSize="18"
                                                            FontWeight="Bold"
                                                            Text="{Binding key}"
                                                            TextTrimming="CharacterEllipsis"
                                                            TextWrapping="NoWrap" />
                                                        <!--<TextBlock TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Text="{Binding}" Margin="0,6,0,0" HorizontalAlignment="Left" />-->
                                                    </StackPanel>
                                                </DataTemplate>
                                            </hc:Card.FooterTemplate>
                                        </hc:Card>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>



            <TabItem Header="Accumulated">
                <ScrollViewer HorizontalScrollBarVisibility="Visible">
                    <ItemsControl x:Name="ItemsControlAccumulated" Style="{StaticResource LastItemBottomRowStyle}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type views:ModelKeyIndex}">
                                <TabControl>

                                    <TabItem Header="Plot">
                                        <Grid>
                                            <oxy:PlotView Model="{Binding model}" />
                                            <Grid
                                                Margin="70,50"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top">
                                                <TextBlock
                                                    FontSize="20"
                                                    Foreground="Silver"
                                                    Text="{Binding index}" />
                                                <TextBlock
                                                    Margin="30,0,0,0"
                                                    FontSize="20"
                                                    Foreground="Silver"
                                                    Text="{Binding key}" />
                                            </Grid>
                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="Data">
                                        <ListBox ItemsSource="{Binding model, Converter={StaticResource Converter}}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ItemsControl ItemsSource="{Binding ItemsSource}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Orientation}" />
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    <!--<Ellipse Fill="Red" Height="20" Width="20"></Ellipse>-->
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ListBox>
                                    </TabItem>
                                </TabControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Accumulated Group">

                <DockPanel>

                    <ScrollViewer HorizontalScrollBarVisibility="Visible">
                        <ItemsControl x:Name="ItemsControlAccumulatedGroup" Style="{StaticResource LastItemBottomRowStyle}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type views:ModelKeyIndex}">
                                    <TabControl>

                                        <TabItem Header="Plot">
                                            <Grid>
                                                <oxy:PlotView Model="{Binding model}" />
                                                <Grid
                                                    Margin="70,50"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top">
                                                    <TextBlock
                                                        VerticalAlignment="Top"
                                                        FontSize="20"
                                                        Foreground="Silver"
                                                        Text="{Binding index}" />
                                                    <TextBlock
                                                        Margin="30,0,0,0"
                                                        VerticalAlignment="Bottom"
                                                        FontSize="20"
                                                        Foreground="DarkGray"
                                                        Text="{Binding key}" />
                                                </Grid>
                                            </Grid>
                                        </TabItem>
                                        <TabItem Header="Data">
                                            <ListBox ItemsSource="{Binding model, Converter={StaticResource Converter}}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <ItemsControl ItemsSource="{Binding ItemsSource}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding key}" />
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                        <!--<Ellipse Fill="Red" Height="20" Width="20"></Ellipse>-->
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ListBox>
                                        </TabItem>
                                    </TabControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>

            <TabItem Header="Standard">
                <ScrollViewer>
                    <ItemsControl x:Name="ItemsControlStandard">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type views:ModelKeyIndex}">
                                <Grid Width="600" Height="400">
                                    <hc:Card
                                        Margin="8"
                                        BorderThickness="0"
                                        Footer="{Binding index}">

                                        <Border CornerRadius="4,4,0,0">
                                            <oxy:PlotView Model="{Binding model}" />
                                        </Border>
                                        <hc:Card.FooterTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="10">
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="18"
                                                        FontWeight="Bold"
                                                        Text="{Binding key}"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="NoWrap" />
                                                    <!--<TextBlock TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Text="{Binding}" Margin="0,6,0,0" HorizontalAlignment="Left" />-->
                                                </StackPanel>
                                            </DataTemplate>
                                        </hc:Card.FooterTemplate>
                                    </hc:Card>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="ValueKey">
                <ScrollViewer>
                    <ItemsControl x:Name="ItemsControlValueKey">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type views:ModelKeyIndex}">
                                <Grid Width="600" Height="400">
                                    <hc:Card
                                        Margin="8"
                                        BorderThickness="0"
                                        Footer="{Binding}">

                                        <Border CornerRadius="4,4,0,0">
                                            <oxy:PlotView Model="{Binding model}" />
                                        </Border>
                                        <hc:Card.FooterTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="10">
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="18"
                                                        FontWeight="Bold"
                                                        Text="{Binding key}"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="NoWrap" />
                                                    <!--<TextBlock TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Text="{Binding}" Margin="0,6,0,0" HorizontalAlignment="Left" />-->
                                                </StackPanel>
                                            </DataTemplate>
                                        </hc:Card.FooterTemplate>
                                    </hc:Card>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>