             xmlns:local="clr-namespace:OxyPlot.Reactive.DemoApp.Views" xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" >
            <ComboBox x:Name="RatioComboBox" SelectedIndex="0">
                <ComboBoxItem>0.001</ComboBoxItem>
                <ComboBoxItem>0.002</ComboBoxItem>
                <ComboBoxItem>0.005</ComboBoxItem>
                <ComboBoxItem>0.01</ComboBoxItem>
